# Backend .env file
# Create this as .env in your backend root directory

# Google Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Google Custom Search API
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# Optional: SerpApi key (fallback search)
SERPAPI_KEY=your_serpapi_key_here

# JWT Secret (change this to a secure random string in production)
JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production

# Port (Render will set this automatically)
PORT=5000

# -----------------------------------------------------------

# Frontend .env file
# Create this as .env in your frontend root directory

# Backend API URL (update this after deploying backend to Render)
REACT_APP_API_URL=https://your-render-backend-app.onrender.com

# -----------------------------------------------------------

# For local development, you can use:
# REACT_APP_API_URL=http://localhost:5000
